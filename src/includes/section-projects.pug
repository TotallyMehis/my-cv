a#projects.anchor
section.section.projects
    .container
        h2.text-center= sections.projects.name
        
        .project-list
            each project, projectId in projects
                -
                    let contclass = '';
                    if (project.printHide)
                        contclass += ' no-print';
                div.project(class=contclass)
                    a.anchor(id='project-'+projectId)
                    div.project-highlight(id='section-project-'+projectId)
                    h4= project.name
                    
                    //- Add possible links
                    - if (project.links)
                        - let linksep = false
                        //- p.links.in-print
                        //-     each link in project.links
                        //-         a(href=link.url target='_blank')= link.url
                        p.links.no-print
                            each link in project.links
                                - if (linksep)
                                    |    /    
                                a(href=link.url target='_blank')= link.name
                                - linksep = true
                    
                    p.desc!= project.desc
                    p.tech-used= project.tech
                    p.string!= project.text
                //- End project loop
                